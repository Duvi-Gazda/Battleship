@page
@model Exam.Pages.Game.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="status">
    <div class="new_game">
        <form method="post">
            <div class="form-group">
                <input type="submit" value="New game" class="btn btn-primary" />
            </div>
        </form>    
    </div>
</div>
<div class="games">
    @if(Model.Games.Count > 1)
    {
        <table class="games_list">
            @foreach (var Game in Model.Games)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Game.Id)
                    </td>
                    <td>
                        @* <a asp-page="/Game/CreateMap" asp-route-id="@Game.Id" >Visit</a> *@
                        <form method="post">
                                <input type="hidden" value="@Game.Id" asp-for="Game.Id" />
                                <input type="submit" value="Visit" asp-page-handler="Visit" />
                        </form>
                    </td>
                </tr>
            }        
        </table>
    }
            
</div>